@model IEnumerable<UsersViewModels>

<h2>Users</h2>

<div class="container">
    @if (Model.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>
                            @if (user.UserRoles != null)
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-default" });
                                <span>|</span>
                                @Html.ActionLink("Delete", "Delete", new { id = user.Id }, new { @class = "btn btn-default" });
                            }
                            else
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-default" });
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>No Users</h2>
    }
</div>